<?xml version="1.0" encoding="UTF-8"?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
         http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="AppBundle\Entity\FormTemplate">
        <property name="createDate">
            <constraint name="NotBlank" />
            <constraint name="Type">\DateTime</constraint>
        </property>
        <property name="topic">
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">78</option>
                <option name="minMessage">
                    Your topic must be at least {{ limit }} characters long
                </option>
                <option name="maxMessage">
                    Your topic cannot be longer than {{ limit }} characters
                </option>
            </constraint>
        </property>
        <property name="addressee">
            <constraint name="NotBlank" />
            <constraint name="Email">
                <option name="message">The email "{{ value }}" is not a valid email.</option>
                <option name="checkMX">true</option>
            </constraint>
        </property>
        <property name="mailBody">
            <constraint name="NotBlank" />
        </property>
        <property name="signature">
            <constraint name="NotBlank" />
        </property>
    </class>
</constraint-mapping>